#!/usr/bin/env php
<?php

require_once __DIR__ . '/../autoload.php';

$doc = <<<DOC
Generate diff

Usage:
  gendiff (-h|--help)
  gendiff (-v|--version)
  gendiff [--format <fmt>] <firstFile> <secondFile>

Options:
  -h --help                     Show this screen
  -v --version                  Show version
  --format (stylish|plain|json) Report format [default: stylish]
DOC;

$args = Docopt::handle($doc);
$diff = \Differ\Differ\genDiff($args['<firstFile>'], $args['<secondFile>'], $args['--format'] ?? 'stylish');
echo "$diff\n";
